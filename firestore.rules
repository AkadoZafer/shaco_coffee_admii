rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Global kontrol: user dökümanını okuyup 'admin' rolünü doğrular
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Sadece admin üyeleri değiştirebilir
    match /users/{userId} {
      allow read, write: if isAdmin();
      // VEYA kişinin kendi hesabına okuma erişimi olabilir 
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    match /menu/{document=**} {
      allow read: if true; // Tüm müşteriler görebilir
      allow write: if isAdmin(); // Sadece admin değiştirebilir
    }

    match /stories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /campaigns/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /branches/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
